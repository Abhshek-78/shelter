<%layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-6 offset-3">
    <br>
    <h1>Add new rooms</h1>
    
    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input type="text" name="listing[Title]" placeholder="Title" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea name="listing[Description]" placeholder="Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="img" class="form-label">Image Url</label>
            <input type="text" name="listing[Img]" placeholder="Image URL" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Address</label>
            <input type="text" name="listing[location]" placeholder="Location" class="form-control"/>
        </div>

        <div class="row">
            <div class="mb-3 col-6">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Country" class="form-control"/>
            </div>
            <div class="mb-3 col-6">
                <label for="country" class="form-label">Price</label>
                <input type="number" name="listing[price]" placeholder="Price" class="form-control"/>
            </div>
        </div> 
        <button type="submit" class="btn btn-dark" class="mb-3">Add new item</button>
    </form>
    <br>
    </div>
</div>
        
   
