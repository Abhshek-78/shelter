<%layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-6 offset-3">
    <br>
    <h1>Add new rooms</h1>
    
    <form method="POST" action="/listings"  enctype="multipart/form-data" class="needs-validation" novalidate >
        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input type="text" name="listing[Title]" placeholder="Title" class="form-control" required/>
            <div  class="invalid-feedback">Enter a title</div>
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea name="listing[Description]" placeholder="Description" class="form-control" required></textarea>
            <div  class="invalid-feedback">please provide a description</div>
        </div>
          
        <div class="mb-3">
            <label for="img" class="form-label">Upload images</label>
            <input type="file"  name="listing[Img]" placeholder="Upload image" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Address</label>
            <input type="text" name="listing[location]" placeholder="Location" class="form-control" required/>
            <div  class="invalid-feedback">Enter a correct address</div>
        </div>

        <div class="row">
            <div class="mb-3 col-6">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Country" class="form-control" required/>
                <div  class="invalid-feedback">Enter a country</div>
            </div>
            <div class="mb-3 col-6">
                <label for="country" class="form-label">Price</label>
                <input type="number" name="listing[price]" placeholder="Price" class="form-control" required/>
                <div  class="invalid-feedback">Enter a jenuen price</div>
            </div>
        </div> 
        <button type="submit" class="btn btn-dark" class="mb-3">Add new item</button>
    </form>
    <br>
    </div>
</div>
        
   
