<%layout("/layouts/boilerplate") -%>
<div class="row"></div>
    <div class="col-6 offset-3">
        <br>
        <h1>Edit Room Details</h1>
        <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" enctype="multipart/form-data" class="needs-validation" novalidate>
             <div class="mb-3">     
                <label for="Title" class="form-label">Title</label>
                <input type="text" name="listing[Title]" value="<%=listing.Title%>" class="form-control" required/>
             </div>
             <div class="mb-3">     
                <label for="Description" class="form-label">Description</label>
                <textarea name="listing[Description]" class="form-control" required><%= listing.Description %></textarea>
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Upload images</label>
                <% if(listing.Img) { %>
                    <div class="mb-2">
                        <% if(typeof listing.Img === 'object' && listing.Img.url) { %>
                            <img src="<%=listing.Img.url%>" alt="Current Image" style="max-width: 200px; max-height: 150px;" />
                        <% } else if(typeof listing.Img === 'string') { %>
                            <img src="<%=listing.Img%>" alt="Current Image" style="max-width: 200px; max-height: 150px;" />
                        <% } %>
                        <p class="text-muted">Current Image</p>
                    </div>
                <% } %>
                <input type="file"  name="listing[Img]" placeholder="Upload image" class="form-control"/>
                <small class="text-muted">Leave empty to keep current image</small>
            </div>
            <div class="mb-3">     
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]"  value="<%=listing.location%>" class="form-control" required/>
                <div  class="invalid-feedback">incorrect location</div>
            </div>
            <div class="row">
                <div class="mb-3 col-6">     
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]"  value="<%=listing.country%>" class="form-control" required/>
                </div>

                <div class="mb-3 col-6">     
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]"  value="<%=listing.price%>" class="form-control" required/>
                </div>
            </div>  
             
            <button type="submit" class="btn btn-dark" class="mb-3">Update</button>
            
        </form>
    </div>
</div>
<br>
        
