<% layout("layouts/boilerplate") -%>
<script>
  let map_token="<%= process.env.MAP_TOKEN %>";
</script>

<%
  // compute a safe image src: prefer object.url/secure_url/path, accept strings that look like URLs,
  // treat values like "[object Object]" as invalid so placeholder is used.
  let imgSrc = '/images/placeholder.jpg';
  if (listing && listing.Img) {
    if (typeof listing.Img === 'object') {
      imgSrc = listing.Img.url || listing.Img.secure_url || listing.Img.path || listing.Img.original_url || imgSrc;
    } else if (typeof listing.Img === 'string') {
      const s = listing.Img.trim();
      if (s && (s.startsWith('http') || s.startsWith('/') || s.startsWith('data:'))) {
        imgSrc = s;
      }
    }
  }
%>

<div class="row">
  <div class="col-6 offset-3">
    <br>
    <div class="card">
      <img src="<%= imgSrc %>" class="card-img-top" alt="listing_img" id="show_image">
      <div class="card-body">
        <b><p class="card-text"><%= listing.Title %></p></b>
        <p class="card-text"><%= listing.Description %></p>
        <p>Location: <%= listing.location %>, <%= listing.country %></p>
        <p class="card-text">Price: <%= Number(listing.price).toLocaleString('en-IN') %></p>
        <% if(currentUser && listing.owner && currentUser._id.equals(listing.owner._id)) { %>
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit the details</a>
        <br>
        <div class>
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
          <br>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>
        <% } %>
        <br>
      </div>
    </div>

   

    <div class="mb-1">
      <h4>Reviews</h4>
      <% if(currentUser) { %>
      <form action="/listings/<%=listing.id%>/review" method="post" novalidate class="needs-validation">
        <div class="mb-1.5 mt-1.5" >
          <label for="rating" class="form-label ">Rating</label>
          <div class="star-rating" id="starRating">
            <i class="bi bi-star" data-value="1" style="cursor: pointer; font-size: 2rem; color: #ddd;"></i>
            <i class="bi bi-star" data-value="2" style="cursor: pointer; font-size: 2rem; color: #ddd;"></i>
            <i class="bi bi-star" data-value="3" style="cursor: pointer; font-size: 2rem; color: #ddd;"></i>
            <i class="bi bi-star" data-value="4" style="cursor: pointer; font-size: 2rem; color: #ddd;"></i>
            <i class="bi bi-star" data-value="5" style="cursor: pointer; font-size: 2rem; color: #ddd;"></i>
          </div>
          <input type="hidden" id="rating" name="review[rating]" value="0" required>
          <div class="invalid-feedback" id="ratingFeedback">Please select a rating</div>
        </div>
        <div class="mb-1.5 mt-1.5">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment"  cols="30" rows="10" class="form-control" required></textarea>
          <div  class="invalid-feedback">Enter a comment</div>
        </div>
        <br>
        <button class="btn btn-dark" class="mt-2">Submit</button>
      </form>
      <% } else { %>
      <p><a href="/login">Login</a> to give a review</p>
      <% } %>
    </div>
    

    <div class="container mt-4">
      <h4>All Reviews</h4>
      <div class="row"> 
        <% for (let review of listing.review) { %>
          <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
              <i class="fa-solid fa-circle-user  my-element" ></i>
              <div class="card-body">
                <% if(review.author) { %>
                <h5 class="card-subtitle mb-2 "><strong><%= review.author.username %></strong></h5>
                <% } %>
              <p class="card-text"><%= review.comment %></p>
            <!-- Rating as stars -->
            <div class="text-warning">
              <% for (let i = 1; i <= 5; i++) { %>
                <% if (i <= review.rating) { %>
                  <i class="bi bi-star-fill"></i>
                <% } else { %>
                  <i class="bi bi-star"></i>
                <% } %>
              <% } %>
            </div>
              <form  method="post" action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE">
              <% if(currentUser && review.author && currentUser._id.equals(review.author._id)) { %>
              <button class="btn btn-sm btn-secondary  mt-3">delete</button>
              <% } %>
              </form>
           
            </div>

        </div>
         
      </div>
    <% } %>
  </div>
</div>

</div>
<hr>

 <!-- Map Section -->
    <% if (listing.geometry && listing.geometry.coordinate) { %>  
       <div id="map" style="width: 100vh; height: 50vh; margin: 0 auto;"></div>
      
    
    <script>
      const mapCoordinates = [<%= listing.geometry.coordinate[0] %>, <%= listing.geometry.coordinate[1] %>];
    </script>
    <% } %>

 
</div>
<br>
<script src="/js/map.js"></script>
