<% layout("layouts/boilerplate") -%>
<div class="row">
  <div class="col-6 offset-3">
    <br>
    <div class="card">
      <img src="<%= (listing.Img && typeof listing.Img === 'object') ? (listing.Img.url || '/images/placeholder.jpg') : (listing.Img || '/images/placeholder.jpg') %>" class="card-img-top" alt="listing_img" id="show_image">
      <div class="card-body">
        <b><p class="card-text"><%= listing.Title %></p></b>
        <p class="card-text"><%= listing.Description %></p>
        <p>Location: <%= listing.location %>, <%= listing.country %></p>
        <p class="card-text">Price: <%= Number(listing.price).toLocaleString('en-IN') %></p>
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit the details</a>
        <br>
        <div class>
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
          <br>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>
        <br>
      </div>
    </div>



    <div class="mb-1">
      <h4>Reviews</h4>
      <form action="/listings/<%=listing.id%>/review" method="post" novalidate class="needs-validation">
        <div class="mb-1.5 mt-1.5" >
          <label for="rating" class="form-label ">rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]"  class="form-range" >
        </div>
        <div class="mb-1.5 mt-1.5">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment"  cols="30" rows="10" class="form-control" required></textarea>
          <div  class="invalid-feedback">Enter a comment</div>
        </div>
        <br>
        <button class="btn btn-dark" class="mt-2">Submit</button>
      </form>
    </div>
    

    <div class="container mt-4">
      <h4>All Reviews</h4>
      <div class="row">
        
        <% for (let review of listing.review) { %>
          <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
              
              <i class="fa-solid fa-circle-user  my-element" ></i>
            
              <div class="card-body">
            <!-- Comment -->
              <p class="card-text"><%= review.comment %></p>

            <!-- Rating as stars -->
            <div class="text-warning">
              <% for (let i = 1; i <= 5; i++) { %>
                <% if (i <= review.rating) { %>
                  <i class="bi bi-star-fill"></i>
                <% } else { %>
                  <i class="bi bi-star"></i>
                <% } %>
              <% } %>
            </div>
          </div>
        </div>
        <button class="">delete</button>
      </div>
    <% } %>
  </div>
</div>


  </div>
 
</div>
<br>
